    <div id="g_id_signin"></div>

    <div id="surahSelection">
      <label for="surah">اختر السورة:</label>
      <select id="surah" aria-label="اختر السورة">
        <option value="001">الفاتحة</option>
        <option value="002">البقرة</option>
        <option value="003">آل عمران</option>
