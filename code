      <label for="recitation">اختر الرواية:</label>
      <select id="recitation" aria-label="اختر الرواية">
        <option value="hafs">حفص</option>
        <option value="warsh">ورش</option>
      </select>

      <button id="playBtn" aria-label="تشغيل التلاوة">تشغيل التلاوة</button>

      <audio id="audioPlayer" controls aria-label="مشغل التلاوة"></audio>
    </div>
  </div>

<script>
  function handleCredentialResponse(response) {
    // هنا يمكنك معالجة بيانات المستخدم من response.credential إذا أردت
    document.getElementById('g_id_signin').style.display = 'none';
    document.getElementById('surahSelection').style.display = 'block';
  }

  window.onload = () => {
    google.accounts.id.initialize({
      client_id: 'YOUR_GOOGLE_CLIENT_ID_HERE', // استبدلها برقم العميل الخاص بك
      callback: handleCredentialResponse,
      ux_mode: 'popup',
      locale: 'ar'
    });
    google.accounts.id.renderButton(
      document.getElementById('g_id_signin'),
      { theme: 'filled_blue', size: 'large' }
    );
    google.accounts.id.prompt();
  };

  document.getElementById('playBtn').addEventListener('click', () => {
    const surah = document.getElementById('surah').value;
    const recitation = document.getElementById('recitation').value;
    const baseUrl = 'https://server8.mp3quran.net/';
    let audioUrl = '';

    if(recitation === 'hafs') {
      audioUrl = baseUrl + 'hafs/' + surah + '.mp3';
    } else if(recitation === 'warsh') {
      audioUrl = baseUrl + 'warsh/' + surah + '.mp3';
    }

    const audioPlayer = document.getElementById('audioPlayer');
    audioPlayer.src = audioUrl;
    audioPlayer.load();
    audioPlayer.play();
  });
</script>

